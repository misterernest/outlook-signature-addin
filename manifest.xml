<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:type="MailApp">

  <!-- ðŸ‘‡ GUID VÃLIDO (puedes dejar este) -->
  <Id>3e8c3b90-90f7-4e77-89ee-dbd2acb28f5a</Id>

  <Version>1.0.0.0</Version>
  <ProviderName>Will World Global</ProviderName>
  <DisplayName DefaultValue="WWG Test Add-in" />
  <Description DefaultValue="Quick test to insert a signature" />
  <DefaultLocale>en-US</DefaultLocale>

  <!-- Iconos bÃ¡sicos (puedes usar tu logo) -->
  <IconUrl DefaultValue="https://willworldglobal.com/wp-content/uploads/2025/10/image006.png" />
  <HighResolutionIconUrl DefaultValue="https://willworldglobal.com/wp-content/uploads/2025/10/image006.png" />

  <SupportUrl DefaultValue="https://www.willworldglobal.com/" />

  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.5">
      <Set Name="Mailbox" />
    </Sets>
  </Requirements>

  <!-- ðŸ‘‡ AquÃ­ es donde se carga tu index.html en localhost -->
  <FormSettings>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://services.wkangaroo.com/outlook/signature/index.html" />
      </DesktopSettings>
      <TabletSettings>
        <SourceLocation DefaultValue="https://services.wkangaroo.com/outlook/signature/index.html" />
      </TabletSettings>
      <PhoneSettings>
        <SourceLocation DefaultValue="https://services.wkangaroo.com/outlook/signature/index.html" />
      </PhoneSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit" />
  </Rule>
</OfficeApp>
