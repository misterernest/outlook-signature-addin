<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
  xsi:type="MailApp">

  <!-- ===== Datos básicos ===== -->
  <Id>3e8c3b90-90f7-4e77-89ee-dbd2acb28f5a</Id>  <!-- usa tu GUID si ya tienes uno -->
  <Version>1.0.0.1</Version>
  <ProviderName>Will World Global</ProviderName>

  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="WWG Auto Signature" />
  <Description DefaultValue="Automatically inserts the corporate signature when composing emails." />

  <IconUrl DefaultValue="https://services.wkangaroo.com/outlook/signature/assets/icon-32.png" />
  <HighResolutionIconUrl DefaultValue="https://services.wkangaroo.com/outlook/signature/assets/icon-80.png" />
  <SupportUrl DefaultValue="https://willworldglobal.com" />

  <AppDomains>
    <AppDomain>https://services.wkangaroo.com</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <!-- Requisitos base (schema viejo) -->
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.10" />
    </Sets>
  </Requirements>

  <!-- ===== OBLIGATORIO para validar: FormSettings + SourceLocation ===== -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <!-- Puede ser la misma página que uses para el runtime,
             es solo para que el schema tenga un SourceLocation -->
        <SourceLocation DefaultValue="https://services.wkangaroo.com/outlook/signature/runtime.html" />
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <!-- Permisos para poder escribir en el cuerpo del mensaje -->
  <Permissions>ReadWriteItem</Permissions>

  <!-- Regla requerida por el schema (aunque luego se ignore con VersionOverrides) -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <!-- ====== VersionOverrides: aquí vive el LaunchEvent ====== -->
  <VersionOverrides
    xmlns="http://schemas.microsoft.com/office/mailappversionoverrides"
    xsi:type="VersionOverridesV1_0">

    <VersionOverrides
      xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
      xsi:type="VersionOverridesV1_1">

      <!-- Requisitos para el modelo nuevo -->
      <Requirements>
        <bt:Sets DefaultMinVersion="1.10">
          <bt:Set Name="Mailbox" />
        </bt:Sets>
      </Requirements>

      <Hosts>
        <Host xsi:type="MailHost">

          <!-- Runtimes: HTML/JS que se usan para el event-based -->
          <Runtimes>
            <Runtime resid="WWG.Runtime.Url">
              <!-- Para Outlook desktop clásico que carga JS directamente -->
              <Override type="javascript" resid="WWG.Runtime.Script.Url" />
            </Runtime>
          </Runtimes>

          <DesktopFormFactor>
            <!-- Event-based: se dispara cuando se crea un nuevo mensaje -->
            <ExtensionPoint xsi:type="LaunchEvent">
              <LaunchEvents>
                <LaunchEvent
                  Type="OnNewMessageCompose"
                  FunctionName="onNewMessageComposeHandler" />
              </LaunchEvents>
              <!-- Identifica qué runtime usar -->
              <SourceLocation resid="WWG.Runtime.Url" />
            </ExtensionPoint>
          </DesktopFormFactor>

        </Host>
      </Hosts>

      <!-- Recursos: iconos, URLs, textos -->
      <Resources>
        <bt:Images>
          <bt:Image id="Icon.16x16" DefaultValue="https://services.wkangaroo.com/outlook/signature/assets/icon-16.png" />
          <bt:Image id="Icon.32x32" DefaultValue="https://services.wkangaroo.com/outlook/signature/assets/icon-32.png" />
          <bt:Image id="Icon.80x80" DefaultValue="https://services.wkangaroo.com/outlook/signature/assets/icon-80.png" />
        </bt:Images>

        <bt:Urls>
          <!-- HTML que carga office.js y tu runtime JS -->
          <bt:Url id="WWG.Runtime.Url" DefaultValue="https://services.wkangaroo.com/outlook/signature/runtime.html" />
          <!-- JS donde defines onNewMessageComposeHandler y el Office.actions.associate -->
          <bt:Url id="WWG.Runtime.Script.Url" DefaultValue="https://services.wkangaroo.com/outlook/signature/runtime.js" />
        </bt:Urls>

        <bt:ShortStrings>
          <bt:String id="AppName" DefaultValue="WWG Auto Signature" />
        </bt:ShortStrings>

        <bt:LongStrings>
          <bt:String id="AppDescription" DefaultValue="Automatically inserts the WWG corporate signature when composing messages." />
        </bt:LongStrings>
      </Resources>

    </VersionOverrides>
  </VersionOverrides>
</OfficeApp>
